<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/happyMoogleRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yellow_border_white_thicker_border">

    <ImageView
        android:id="@+id/happyMoogleIcon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/moogle_happy_01"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/happyMoogleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/happyMoogleIcon"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Thank you for your purchase! Kupo!"/>

    <android.support.v7.widget.CardView
        android:id="@+id/happyMoogleContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/happyMoogleText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        cardView:contentPadding="8dp"
        cardView:cardCornerRadius="8dp"
        cardView:cardElevation="4dp"
        cardView:cardPreventCornerOverlap="true"
        cardView:cardBackgroundColor="@color/green_500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Keep\nShopping"/>

    </android.support.v7.widget.CardView>








</RelativeLayout>