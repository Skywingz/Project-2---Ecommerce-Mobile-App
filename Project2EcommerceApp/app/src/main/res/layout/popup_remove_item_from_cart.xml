<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupRemoveItemRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_border_purple">

    <TextView
        android:id="@+id/popupRemoveItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="Remove item from cart?"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <LinearLayout
        android:id="@+id/popupRemoveItemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupRemoveItemTitle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/popupRemoveItemNoButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="no"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red_A200"
            android:gravity="center"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/popupRemoveItemYesButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="YES"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_A700"
            android:gravity="center"
            android:background="@color/transparent"/>


    </LinearLayout>




</RelativeLayout>