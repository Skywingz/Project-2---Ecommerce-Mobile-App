<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:id="@+id/shopListItemCardView"
    cardView:contentPadding="4dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="4dp"
    cardView:cardPreventCornerOverlap="true"
    android:foregroundGravity="center"
    android:layout_margin="6dp"
    cardView:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/shopListCharacterIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:src="@drawable/yellow_border_black"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/shopListCharacterPrice"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_above="@+id/shopListBuyButton"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:text="$999.99"/>

        <TextView
            android:id="@+id/shopListBuyButton"
            android:layout_width="86dp"
            android:layout_height="21dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:text="BUY"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/yellow_border_green"/>

        <TextView
            android:id="@+id/shopListCharacterName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/shopListCharacterIcon"
            android:layout_toLeftOf="@+id/shopListCharacterPrice"
            android:textColor="@color/purple_800"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="left|center_vertical"
            android:text="Cloud Of Darkness"/>

        <TextView
            android:id="@+id/shopListCharacterMaxRarity"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/shopListCharacterIcon"
            android:layout_below="@+id/shopListCharacterName"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="left|center_vertical"
            android:text="Max Rarity: "/>

        <ImageView
            android:id="@+id/shopListRatingStar1"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/shopListCharacterMaxRarity"
            android:layout_below="@+id/shopListCharacterName"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/shopListRatingStar2"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/shopListRatingStar1"
            android:layout_below="@+id/shopListCharacterName"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/shopListRatingStar3"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/shopListRatingStar2"
            android:layout_below="@+id/shopListCharacterName"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/shopListRatingStar4"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/shopListRatingStar3"
            android:layout_below="@+id/shopListCharacterName"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/shopListRatingStar5"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/shopListRatingStar4"
            android:layout_below="@+id/shopListCharacterName"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rarity_star"/>

        <TextView
            android:id="@+id/shopListCharacterOrigin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/shopListCharacterPrice"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:text="(FF BE)"/>


        <TextView
            android:id="@+id/shopListAddedToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Added to basket"
            android:gravity="center"
            android:textColor="@color/yellow_500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@drawable/yellow_border_black"
            android:visibility="invisible"/>

    </RelativeLayout>





</android.support.v7.widget.CardView>