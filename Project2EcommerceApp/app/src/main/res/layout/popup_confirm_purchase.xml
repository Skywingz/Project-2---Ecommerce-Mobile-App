<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupConfirmPurchaseRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_border_purple">

    <TextView
        android:id="@+id/popupConfirmPurchaseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="Confirm Purchase"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/popupConfirmPurchaseTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupConfirmPurchaseTitle"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="$999.99"/>


    <LinearLayout
        android:id="@+id/popupConfirmPurchaseLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupConfirmPurchaseTotalPrice"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/popupConfirmPurchaseCancelButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="cancel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red_A200"
            android:gravity="center"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/popupConfirmPurchaseContinueButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="CONTINUE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_A700"
            android:gravity="center"
            android:background="@color/transparent"/>


    </LinearLayout>




</RelativeLayout>