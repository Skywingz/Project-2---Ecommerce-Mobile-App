<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:id="@+id/cartListItemCardView"
    cardView:contentPadding="4dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="4dp"
    cardView:cardPreventCornerOverlap="true"
    android:layout_margin="6dp"
    android:foregroundGravity="center"
    cardView:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cartListCharacterIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:src="@drawable/yellow_border_black"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/cartListCharacterName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/cartListCharacterIcon"
            android:layout_toLeftOf="@+id/cartListCharacterTotalPrice"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="left|center_vertical"
            android:text="Cloud Of Darkness"/>

        <ImageView
            android:id="@+id/cartListRatingStar1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/cartListCharacterIcon"
            android:layout_below="@+id/cartListCharacterName"
            android:layout_marginRight="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/cartListRatingStar2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/cartListRatingStar1"
            android:layout_below="@+id/cartListCharacterName"
            android:layout_marginRight="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/cartListRatingStar3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/cartListRatingStar2"
            android:layout_below="@+id/cartListCharacterName"
            android:layout_marginRight="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/cartListRatingStar4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/cartListRatingStar3"
            android:layout_below="@+id/cartListCharacterName"
            android:layout_marginRight="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rarity_star"/>

        <ImageView
            android:id="@+id/cartListRatingStar5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/cartListRatingStar4"
            android:layout_below="@+id/cartListCharacterName"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rarity_star"/>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/checkoutItemMinus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/checkoutItemQuantity"
                android:scaleType="centerInside"
                android:background="@drawable/yellow_border_white"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>

            <TextView
                android:id="@+id/checkoutItemQuantity"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:text="99"/>

            <ImageView
                android:id="@+id/checkoutItemPlus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/checkoutItemQuantity"
                android:scaleType="centerInside"
                android:background="@drawable/yellow_border_white"
                android:src="@drawable/ic_navigate_next_black_24dp"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/cartListCharacterPerUnit"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/cartListCharacterTotalPrice"
            android:layout_above="@+id/cartListCharacterTotalPrice"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="left|center_vertical"
            android:text="Per Unit: "/>

        <TextView
            android:id="@+id/cartListCharacterPrice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/cartListCharacterPerUnit"
            android:layout_above="@+id/cartListCharacterTotalPrice"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="$99.99"/>

        <TextView
            android:id="@+id/cartListCharacterTotalPrice"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:text="$999.99"/>



    </RelativeLayout>





</android.support.v7.widget.CardView>